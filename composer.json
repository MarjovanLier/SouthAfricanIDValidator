{
  "name": "marjovanlier/southafricanidvalidator",
  "description": "Validate South African 13-digit ID numbers (YYMMDDSSSSCAZ) with date, citizenship, and Luhn checksum verification",
  "keywords": [
    "south-africa",
    "sa-id",
    "rsa-id",
    "id-validation",
    "luhn-algorithm",
    "identity-number",
    "za",
    "validation",
    "Marjo van Lier"
  ],
  "homepage": "https://github.com/marjovanlier/southafricanidvalidator",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Marjo Wenzel van Lier",
      "email": "marjo.vanlier@gmail.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/MarjovanLier/SouthAfricanIDValidator/issues",
    "source": "https://github.com/MarjovanLier/SouthAfricanIDValidator"
  },
  "autoload": {
    "psr-4": {
      "MarjovanLier\\SouthAfricanIDValidator\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MarjovanLier\\SouthAfricanIDValidator\\Tests\\": "tests"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "optimise-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.3",
    "marjovanlier/stringmanipulation": "^2.0.3"
  },
  "require-dev": {
    "enlightn/security-checker": ">=2.0.0",
    "infection/infection": ">=0.29.14",
    "laravel/pint": ">=1.22.1",
    "mattsparks/blns-php": ">=1.0.1",
    "phan/phan": ">=5.4.5",
    "php-parallel-lint/php-parallel-lint": ">=1.4.0",
    "phpmd/phpmd": ">=2.15",
    "phpstan/extension-installer": ">=1.4.3",
    "phpstan/phpstan": ">=2.1.17",
    "phpstan/phpstan-strict-rules": ">=2.0.4",
    "phpunit/phpunit": ">=12.0.0",
    "psalm/plugin-phpunit": ">=0.19.3",
    "rector/rector": ">=2.0.16",
    "roave/security-advisories": "dev-latest",
    "robiningelbrecht/phpunit-coverage-tools": ">=1.9",
    "vimeo/psalm": ">=6.7.0"
  },
  "scripts-descriptions": {
    "tests": "Run complete test suite (all quality checks)",
    "test:code-style": "Check code style compliance (Laravel Pint)",
    "test:composer-validate": "Validate composer.json structure and consistency",
    "test:infection": "Run mutation tests to verify test quality",
    "test:lint": "Check PHP syntax in all files",
    "test:phan": "Static analysis with Phan (AST-based)",
    "test:phpmd": "Detect code smells and complexity issues",
    "test:phpstan": "Static analysis at maximum level",
    "test:phpunit": "Run unit tests with code coverage and enforce 100% line coverage",
    "test:psalm": "Type-focused static analysis",
    "test:rector": "Check for automated refactoring opportunities (dry-run)",
    "test:vulnerabilities": "Scan dependencies for security vulnerabilities"
  },
  "scripts": {
    "post-update-cmd": [
      "composer validate --strict",
      "security-checker security:check",
      "composer outdated -D"
    ],
    "tests": [
      "@test:composer-validate",
      "@test:vulnerabilities",
      "@test:lint",
      "@test:code-style",
      "@test:phpmd",
      "@test:phpunit",
      "@test:infection",
      "@test:phpstan",
      "@test:phan",
      "@test:psalm",
      "@test:rector"
    ],
    "test:code-style": "pint --test",
    "test:composer-validate": "composer validate --strict",
    "test:infection": "php -d memory_limit=-1 -d zend_extension=xdebug -d xdebug.mode=coverage ./vendor/bin/infection --threads=4 --show-mutations",
    "test:lint": "parallel-lint --exclude vendor --show-deprecated .",
    "test:phan": "phan --no-progress-bar",
    "test:phpmd": "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/phpmd src,tests text phpmd.xml",
    "test:phpstan": "phpstan analyse --memory-limit=512M --no-progress --no-interaction",
    "test:phpunit": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-filter src --coverage-clover reports/code-coverage/clover.xml -d --min-coverage=100",
    "test:psalm": "psalm --no-cache --no-progress --show-info=false",
    "test:rector": "rector --dry-run",
    "test:vulnerabilities": "security-checker security:check"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "blns/blns",
        "version": "1.0.0",
        "dist": {
          "url": "https://github.com/minimaxir/big-list-of-naughty-strings/archive/master.zip",
          "type": "zip"
        }
      }
    }
  ]
}
